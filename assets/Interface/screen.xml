<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="spiel" controller="mygame.Main" >
        <layer id="layer2" backgroundColor="#0000" childLayout="vertical" visibleToMouse="true" height="85%" width="25%">
            <panel id="history" height="85%" width="25%" align="right" backgroundColor="#fff1" childLayout="vertical">
                <control id="historie" name="listBox" vertical="optional" horizontal="off" displayItems="17" selectionMode="Disabled"></control>
                <control name="button" label="Weiterspielen" id="weiterspielen" align="center" valign="bottom">
                    <interact onClick=""/>
                </control>
            </panel>
        </layer>
        <layer id="layer1" backgroundColor="#0000" childLayout="vertical" visibleToMouse="true">
            <panel id="menue" height="5%" width="100%" align="left" childLayout="horizontal" backgroundColor="#0000">
                <control name="button" label="Neues Spiel" id="start" align="center" valign="center">
                    <interact onClick="newGame()"/> 
                </control>
                <control name="button" label="Spiel laden" id="load" align="center" valign="center">
                    <interact onClick="loadGame()"/> 
                </control>
                <control name="button" label="Spiel speichern" id="save" align="center" valign="center">
                    <interact onClick="saveGame()"/> 
                </control>
                <control name="button" label="Beenden" id="exit" align="center" valign="center">
                    <interact onClick="quitGame()"/> 
                </control>
            </panel>
            <panel id="board" height="80%" width="75%" align="left" backgroundColor="#f8f1" childLayout="center">
            </panel>          
            <panel id="informationen" height="15%" width="100%" align="center" backgroundColor="#ff81" childLayout="center">
                <panel id="zugeingabe" backgroundColor="#ff81" width="25%" height="100%" align="right" valign="bottom" childLayout="vertical">
                    <text text="Zug eingeben:" font="Interface/Fonts/Arial.fnt"/>
                    <control id="von" label="von" name="textfield" width="50px"></control>
                    <control id="nach" label="nach" name="textfield" width="50px"></control>
                    <control name="button" label="Ziehen" id="ziehen" align="center" valign="center">
                        <interact onClick="zugPerSchachnotation()"/>
                    </control>
                </panel>
            </panel>
        </layer>        
    </screen>
    <screen id="start" controller="mygame.Main">
        <layer id="layer3" backgroundColor="#000f" childLayout="vertical" visibleToMouse="true">
            <panel id="controls" height="100%" width="100%" backgroundcolor="#ff81" childLayout="vertical">
                <control name="textfield" id="ip"></control>
                <control id="farbwahl" name="radioButtonGroup" />
                <panel childLayout="vertical">
                    <panel childLayout="horizontal">
                        <control name="label" text="Weiss" with="60px" />
                        <control name="radioButton" id="weiss" group="farbwahl" />
                    </panel>
                    <panel childLayout="horizontal">
                        <control name="label" text="Schwarz" with="60px" />
                        <control name="radioButton" id="schwarz" group="farbwahl" />
                    </panel>
                </panel>
                <control name="button" id="neuesSpiel" label="Spiel erstellen" align="center">
                    <interact onClick="spielErstellen()"/>
                </control>
                <control name="button" id="spielBeitreten" label="Spiel beitreten" align="center">
                    <interact onClick="spielBeitreten()"/>
                </control>
            </panel>
        </layer>
        
    </screen>
</nifty>
